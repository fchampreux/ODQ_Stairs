<% provide(:title, 'Managing parameters') %>

  <h1><%= @parameters_list.name %></h1>

  <ul class="mid_menu">
    <li><%= link_to 'Edit', edit_parameters_list_path(@parameters_list) %> |</li>
    <li><%= link_to 'Up', parameters_lists_path %> |</li>
    <li><%= link_to 'Destroy', @parameters_list, confirm: 'Are you sure?', method: :delete %></li>
  </ul>

<!-- <p id="notice"><%= notice %></p> -->


      <div class="row">
        <div class="col-md-2 text-right">Name:
        </div>
        <div class="col-md-3"><%= @parameters_list.name%>
        </div>
        <div class="col-md-1 text-right">Code:
        </div>
        <div class="col-md-2"><%= @parameters_list.code%>
        </div>
        <div class="col-md-2 text-right">Unique id:
        </div>
        <div class="col-md-1"><%= @parameters_list.id%>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 text-right">Description:
        </div>
        <div class="col-md-6"><pre><%= @parameters_list.description%></pre>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 text-right">Owner:
        </div>
        <div class="col-md-2"><%= @parameters_list.owner.login%>
        </div>
        <div class="col-md-2 text-right">Created by:
        </div>
        <div class="col-md-2"><%= @parameters_list.created_by%>
        </div>
        <div class="col-md-2 text-right">Updated by:
        </div>
        <div class="col-md-2"><%= @parameters_list.updated_by%>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 text-right">Playground id:
        </div>
        <div class="col-md-2"><%= @parameters_list.playground_id%>
        </div>
        <div class="col-md-2 text-right">Created at:
        </div>
        <div class="col-md-2"><%= @parameters_list.created_at%>
        </div>
        <div class="col-md-2 text-right">Updated at:
        </div>
        <div class="col-md-2"><%= @parameters_list.updated_at%>
        </div>
      </div>

<!-- Paramètres liés -->

      <table class="table table-striped table-condensed">
        <tr align="left">
          <th> Name </th>
          <th> Code </th>
          <th> Value </th>
          <th> Description </th>
          <th>Active from</th>
          <th>Active to</th>
          <th> Updated by </th>
          <th> Updated at </th>
        </tr>
        <% @parameters_list.parameters.order("name ASC").each do |parameter| %>
        <tr align="left">
          <td valign="top"> <%=link_to parameter.name, edit_parameter_path(parameter) %> </td>
          <td class="col_narrow"> <%=parameter.param_code%> </td>
          <td class="col_narrow"> <%=parameter.param_value%> </td>
          <td class="col_medium"> <%=link_to parameter.description, parameter%> </td>
          <td><%= parameter.active_from %></td>
          <td><%= parameter.active_to %></td>
          <td valign="top"> <%=parameter.updated_by%> </td>
          <td valign="top"> <%=parameter.updated_at%> </td>
        </tr>
        <% end%>
      </table>

      <%= link_to "Add parameter", new_parameters_list_parameter_path(@parameters_list) %>


