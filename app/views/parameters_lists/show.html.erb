<% provide(:title, (t('ManagingPms'))) %>

<% content_for :page_heading do %>
    <%= t('Settings') %>: <%= @parameters_list.name %>
<% end %> 

  <ul class="mid_menu">
    <li><%= link_to t('Edit'), edit_parameters_list_path(@parameters_list) %> |</li>
    <li><%= link_to t('Up'), parameters_lists_path %> |</li>
    <li><%= link_to t('Destroy'), @parameters_list, confirm: t('Sure'), method: :delete %></li>
  </ul>

<!-- <p id="notice"><%= notice %></p> -->


      <div class="row">
        <div class="col-md-2 text-right"><%= t('Name') %>:
        </div>
        <div class="col-md-3"><%= @parameters_list.name%>
        </div>
        <div class="col-md-1 text-right"><%= t('Code') %>:
        </div>
        <div class="col-md-2"><%= @parameters_list.code%>
        </div>
        <div class="col-md-2 text-right"><%= t('UniqueId') %>:
        </div>
        <div class="col-md-1"><%= @parameters_list.id%>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 text-right"><%= t('Description') %>:
        </div>
        <div class="col-md-6"><pre><%= @parameters_list.description%></pre>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 text-right"><%= t('Owner') %>:
        </div>
        <div class="col-md-2"><%= @parameters_list.owner.login%>
        </div>
        <div class="col-md-2 text-right"><%= t('CreatedBy') %>:
        </div>
        <div class="col-md-2"><%= @parameters_list.created_by%>
        </div>
        <div class="col-md-2 text-right"><%= t('UpdatedBy') %>:
        </div>
        <div class="col-md-2"><%= @parameters_list.updated_by%>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 text-right"><%= t('PgndId') %>:
        </div>
        <div class="col-md-2"><%= @parameters_list.playground_id%>
        </div>
        <div class="col-md-2 text-right"><%= t('CreatedAt') %>:
        </div>
        <div class="col-md-2"><%= @parameters_list.created_at%>
        </div>
        <div class="col-md-2 text-right"><%= t('UpdatedAt') %>:
        </div>
        <div class="col-md-2"><%= @parameters_list.updated_at%>
        </div>
      </div>

<!-- Paramètres liés -->

  <div class="row">
    <div class="col-md-2">
      Download:
      <%= link_to "CSV", parameters_list_path(@parameters_list, format: "csv") %> |
      <%= link_to "Excel", parameters_list_path(@parameters_list, format: "xls") %>
    </div>
    <div class="col-md-2">
      <%= link_to t('ImportParams'), new_parameters_list_parameters_import_path(@parameters_list) %>
    </div>
  </div>
  
      <table class="table table-striped table-condensed">
        <tr align="left">
          <th> <%= t('Name') %> </th>
          <th> <%= t('Code') %> </th>
          <th> <%= t('Value') %> </th>
          <th> <%= t('Description') %> </th>
          <th><%= t('ValidFrom') %></th>
          <th><%= t('ValidTo') %></th>
        </tr>
        <% @parameters_list.parameters.order("name ASC").each do |parameter| %>
        <tr align="left">
          <td valign="top"> <%= parameter.name %> </td>
          <td class="col_narrow"> <%=parameter.param_code%> </td>
          <td class="col_narrow"> <%=parameter.param_value%> </td>
          <td class="col_medium"> <%=parameter.description %> </td>
          <td><%= parameter.active_from %></td>
          <td><%= parameter.active_to %></td>
        </tr>
        <% end%>
      </table>



