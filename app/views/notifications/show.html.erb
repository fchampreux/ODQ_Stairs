<% provide(:title, 'Managing notifications') %>
<% content_for :page_heading do %>
  Notification: <%= @notification.name %>
<% end %>

<div class="row">
  <div class="col-md-2 text-right">Description:
  </div>
    <div class="col-md-6"><pre><%= @notification.description %></pre>
  </div>
  <div class="col-md-1 text-right">Id:
  </div>
    <div class="col-md-1"><%= @notification.odq_object_id %>
  </div>

</div>

<div class="row">
  <div class="col-md-2 text-right"> Owner:
  </div>
    <div class="col-md-2"><%= @notification.owner.name %>
  </div>
    <div class="col-md-2 text-right"> Responsible:
  </div>
    <div class="col-md-2"><%= @notification.responsible.name %>
  </div>
</div>

<div class="row">
  <div class="col-md-2 text-right"> Business object:
  </div>
    <div class="col-md-2"><%= @notification.business_object.name %>
  </div>
    <div class="col-md-2 text-right"> Scope:
  </div>
    <div class="col-md-2"><%= @notification.scope.name %>
  </div>
</div>

<div class="row">
  <div class="col-md-2 text-right"> Severity:
  </div>
    <div class="col-md-2"><%= @notification.severity.name %>
  </div>
    <div class="col-md-2 text-right"> Status:
  </div>
    <div class="col-md-2"><%= @notification.status.name %>
  </div>
</div>


<div class="row">
  <div class="col-md-2 text-right"> Created by:
  </div>
    <div class="col-md-2"><%= @notification.created_by %>
  </div>
    <div class="col-md-2 text-right"> Updated_by:
  </div>
    <div class="col-md-2"><%= @notification.updated_by %>
  </div>
</div>

<div class="row">
  <div class="col-md-2 text-right"> Created at:
  </div>
    <div class="col-md-2"><%= @notification.created_at %>
  </div>
    <div class="col-md-2 text-right"> Updated_at:
  </div>
    <div class="col-md-2"><%= @notification.updated_at %>
  </div>
</div>

<div class="row">
  <div class="col-md-2 text-right"> Expected at:
  </div>
    <div class="col-md-2"><%= @notification.expected_at %>
  </div>
    <div class="col-md-2 text-right"> Closed_at:
  </div>
    <div class="col-md-2"><%= @notification.closed_at %>
  </div>
</div>

<hr/>

<%= render partial: "shared/breaches_list", locals: {this_object: @notification} %>

<%= link_to 'Back', notifications_path %>
