<% provide(:title, 'Managing business rules') %>

<%= will_paginate %>

<%= render partial: "shared/simple_search", locals: {this_path: business_rules_path} %>

<table class="table table-striped">
  <tr>
    <th>Hierarchy</th>
    <th>Code</th>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
    <th>Audit</th>
    <th>Updated by</th>
    <th>Updated at</th>
  </tr>

<% @business_rules.each do |business_rule| %>
  <tr>
    <td class="col_narrow"><%= link_to business_rule.hierarchy, business_rule %></td>
    <td class="col_narrow"><%= link_to business_rule.code, business_rule %></td>
    <td><%= business_rule.name %></td>
    <td class="col_medium"><%= business_rule.description %></td>
    <td><%= business_rule.status.name %></td>
    <td><%= image_tag(index_audit_tag_for(business_rule), :alt => "Quality hit") %></td>
    <td><%= business_rule.updated_by %></td>
    <td><%= business_rule.updated_at %></td>
  </tr>
<% end %>
</table>

<%= will_paginate %>

<br />
