<%= form_for [@business_rule, @breach] do |f| %>
  <% if @breach.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@breach.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% @breach.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

      <div class="row">
        <div class="span2 text-right">Error message:
        </div>
        <div class="span6 field"><pre><%= @breach.error_message %></pre>
        </div>
      </div>

  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab1" data-toggle="tab">Breach</a></li>
      <li><a href="#tab2" data-toggle="tab">Business Rule</a></li>
      <li><a href="#tab3" data-toggle="tab">Other Business Rules</a></li>    
<!--      <li><a href="#tab4" data-toggle="tab">Scopes</a></li> -->
      <li><a href="#tab5" data-toggle="tab">History list</a></li>
      <li><a href="#tab6" data-toggle="tab">Ownership</a></li>    
    </ul>

    <div class="tab-content">

    <div class="tab-pane active" id="tab1">
<!-- Tab content for Definition -->
      <h4> Breached <%= @breach.breach_type.name %> </h4>
      <div class="row">
        <div class="span2 text-right">Status:
        </div>
        <div class="span2"><%= f.collection_select :breach_status_id, @breach_statuses_list, :id, :name  %>
        </div>
        <div class="span2 text-right">Assigned to:
        </div>
        <div class="span2"><%= f.collection_select :responsible_id, @responsibles_list, :id, :login  %>
        </div>
        <div class="span2 text-right">White list flag:
        </div>
        <div class="span2 "><%= f.check_box :is_whitelisted %>
        </div>
      </div>

      <hr />

      <div class="row">
        <div class="span2 text-right">Application:
        </div>
        <div class="span2 field"><%= @breach.software.name %>
        </div>
        <div class="span2 text-right">Business object:
        </div>
        <div class="span2 field"><%= @breach.business_object.name %>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right">Primary key:
        </div>
        <div class="span3 field"><%= @breach.business_object.key_columns %>
        </div>
      </div>

      <div class="row">
        <div class="span3 offset2 field"><%= @breach.pk_values %>
        </div>
        <div class="span3">
          <table>
            <tr>
              <% @breach.pk_values.split(";").each do |column| %>
                <td> <%= column %> </td>
              <% end %>
            </tr>
          </table>
        </div>
      </div>
      <div class="row">      
        <div class="span2 text-right">Published values:
        </div>
        <div class="span3 field"><%= @breach.business_object.published_columns %>
        </div>
      </div>
      <div class="row">      
        <div class="span3 offset2 field"><%= @breach.current_values %>
        </div>
      </div>
      <div class="row">      
        <div class="span2 text-right">Proposed data:
        </div>
        <div class="span3 field"><%= f.text_area :proposed_values %>
        </div>
      </div>

      <h4> Dimensions </h4>
      <hr />

      <div class="row">
        <div class="span2 text-right">Organisation:
        </div>
        <div class="span2 field"><%= @breach.organisation.name %>
        </div>

        <div class="span2 text-right">Territory:
        </div>
        <div class="span2 field"><%= @breach.territory.name %>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right">Period:
        </div>
        <div class="span2 field"><%= @breach.period_id %>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right">Updated by:
        </div>
        <div class="span2 field"><%= @breach.record_updated_by %>
        </div>

        <div class="span2 text-right">Updated at:
        </div>
        <div class="span2 field"><%= @breach.record_updated_at %>
        </div>
      </div>

<!-- Tab content -->
    </div>

    <div class="tab-pane" id="tab2">
<!-- Tab content for Business Rule -->

      <h4> Business Rule summary </h4>
      <hr />


<!-- Tab content -->
    </div>

    <div class="tab-pane" id="tab3">
<!-- Tab content for Other Business Rules -->

      <h4> Other Business Rules applying to this breach </h4>
      <hr />


<!-- Tab content -->
    </div>

    <div class="tab-pane" id="tab4">
<!-- Tab content for Scopes -->

      <h4> Scopes providing this breach </h4>
      <hr />


<!-- Tab content -->
    </div>

    <div class="tab-pane" id="tab5">
<!-- Tab content for History -->

      <h4> History of change requests </h4>
      <hr />

<!-- Tab content -->
    </div>


    <div class="tab-pane" id="tab6">
<!-- Tab content for Ownership -->

      <div class="row">
        <div class="span2 text-right">Approver:
        </div>
        <div class="span2"><%= @breach.approver.name%>
        </div>
        <div class="span2 text-right">Approved at:
        </div>
        <div class="span2"><%= @breach.approved_at%>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right">Unique id:
        </div>
        <div class="span2"><%= @breach.id%>
        </div>
        <div class="span2 text-right">Created by:
        </div>
        <div class="span2"><%= @breach.created_by%>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right">Playground id:
        </div>
        <div class="span2"><%= @breach.playground_id%>
        </div>
        <div class="span2 text-right">Created at:
        </div>
        <div class="span2"><%= @breach.created_at%>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right">Owner:
        </div>
        <div class="span2"><%= @breach.owner.login%>
        </div>
        <div class="span2 text-right">Updated by:
        </div>
        <div class="span2"><%= @breach.updated_by%>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right">Parent:
        </div>
        <div class="span2"><%= link_to @breach.business_rule.name, @breach.business_rule %>
        </div>
        <div class="span2 text-right">Updated at:
        </div>
        <div class="span2"><%= @breach.updated_at%>
        </div>
      </div>

<!-- Tab content -->
    </div>



  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
