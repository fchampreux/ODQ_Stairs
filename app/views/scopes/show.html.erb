<% provide(:title, 'Managing scopes') %>

  <h1>Scope: <%= @scope.name %></h1>

  <ul class="mid_menu">
    <li><%= link_to 'Edit', edit_scope_path(@scope) %> |</li>
    <li><%= link_to 'Back', @scope.landscape %> | </li>
    <li><%= link_to 'Destroy', @scope, confirm: 'Are you sure?', method: :delete %></li>
  </ul>

<p id="notice"><%= notice %></p>

  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab1" data-toggle="tab">Definition</a></li>
      <li><a href="#tab2" data-toggle="tab">Query</a></li> 
      <li><a href="#tab3" data-toggle="tab">Ownership</a></li>

      <!-- li class="inactive"><a href="#tab5" data-toggle="tab">Sample data</a></li -->    
    </ul>
    <div class="tab-content">
  
    <div class="tab-pane active" id="tab1">
<!-- Tab content for Definition -->

      <div class="row">
        <div class="span2 text-right">Name:
        </div>
        <div class="span6"><%= @scope.name%>
        </div>
        <div class="span1 text-right">Code:
        </div>
        <div class="span1"><%= @scope.code%>
        </div>
        <div class="span1 text-right">Status:
        </div>
        <div class="span1"><%= @scope.status.name%>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right">Description:
        </div>
        <div class="span6"><pre><%= @scope.description%></pre>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right">Hierarchy:
        </div>
        <div class="span2"><%= @scope.hierarchy%>
        </div>
      </div>

<!-- Tab content -->
    </div>    

    <div class="tab-pane" id="tab2">
<!-- Tab content for Query -->

      <div class="row">
        <div class="span2 text-right">Load interface:
        </div>
        <div class="span2"><%= @scope.load_inferface%>
        </div>
      </div>
      <div class="row">
        <div class="span2 text-right">SQL Query:
        </div>
        <div class="span6"><pre><%= @scope.SQL_query%></pre>
        </div>
      </div>

<!-- Tab content -->
    </div>

    <div class="tab-pane" id="tab3">
<!-- Tab content for Ownership -->

      <div class="row">
        <div class="span2 text-right">Unique id:
        </div>
        <div class="span2"><%= @scope.id%>
        </div>
        <div class="span2 text-right">Created by:
        </div>
        <div class="span2"><%= @scope.created_by%>
        </div>
      </div>
      <div class="row">
        <div class="span2 text-right">Playground id:
        </div>
        <div class="span2"><%= @scope.playground_id%>
        </div>
        <div class="span2 text-right">Created at:
        </div>
        <div class="span2"><%= @scope.created_at%>
        </div>
      </div>
      <div class="row">
        <div class="span2 text-right">Owner:
        </div>
        <div class="span2"><%= @scope.owner.login%>
        </div>
        <div class="span2 text-right">Updated by:
        </div>
        <div class="span2"><%= @scope.updated_by%>
        </div>
      </div>
      <div class="row">
        <div class="span2 text-right">Parent:
        </div>
        <div class="span2"> <%=link_to @scope.landscape.name, @scope.landscape %>
        </div>
        <div class="span2 text-right">updated at:
        </div>
        <div class="span2"><%= @scope.updated_at%>
        </div>
      </div>

<!-- Tab content -->
    </div>
    
    </div>
  </div>
 




