<%= form_for [@landscape, @scope] do |f| %>
  <% if @scope.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@scope.errors.count, "error") %>: <%= t('ValidationWarn') %></h2>

      <ul>
      <% @scope.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab1" data-toggle="tab"> <%= t('Definition') %> </a></li>
      <li><a href="#tab2" data-toggle="tab"> <%= t('Implementation') %> </a></li>    
    </ul>
    <div class="tab-content">

    <div class="tab-pane active" id="tab1">
<!-- Tab content for Definition -->

      <%= render partial: "shared/object_definition_form", locals: {f: f} %>

<!-- Tab content -->
    </div>

    <div class="tab-pane" id="tab2">
<!-- Tab content for Implementation -->
      
      <div class="row">
        <div class="col-md-2 text-right"><%= t('LoadInt') %>:
        </div>
        <div class="col-md-10 field"><%= f.text_field :load_interface, :class => "col-md-4" %>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-2 text-right"> <%= t('Technology')%>:
        </div>
        <div class="col-md-2 field"><%= f.text_field :db_technology%>
        </div>
        <div class="col-md-2 text-right"> <%= t('Connection')%>:
        </div>
        <div class="col-md-2 field"><%= f.text_field :db_connection%>
        </div>
        <div class="col-md-2 text-right"> <%= t('OwnerSchema')%>:
        </div>
        <div class="col-md-2 field"><%= f.text_field :db_owner_schema%>
        </div>
      </div>
       <div class="row">
        <div class="col-md-2 text-right"> <%= t('Structure')%>:
        </div>
        <div class="col-md-2 field"><%= f.text_field :structure_name%>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-2 text-right"><%= t('SQL') %>:
        </div>
        <div class="col-md-10 field"><%= f.text_area :SQL_query, :rows => 5, :class => "col-md-4" %>
        </div>
      </div>

      
<!-- Tab content -->
    </div>

    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
