<% provide(:title, 'Managing scopes') %>

<%= will_paginate %>

<%= render partial: "shared/simple_search", locals: {this_path: scopes_path} %>

<table class="table table-striped">
  <tr>
    <th>Hierarchy</th>
    <th>Code</th>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
    <th>Audit</th>
    <th>Updated by</th>
    <th>Updated at</th>
  </tr>

<% @scopes.each do |scope| %>
  <tr>
    <td class="col_narrow"><%= link_to scope.hierarchy, scope %></td>
    <td class="col_narrow"><%= link_to scope.code, scope %></td>
    <td><%= scope.name %></td>
    <td class="col_medium"><%= scope.description %></td>
    <td><%= scope.status.name %></td>
    <td><%= image_tag(index_audit_tag_for(scope), :alt => "Quality hit") %></td>
    <td><%= scope.updated_by %></td>
    <td><%= scope.updated_at %></td>
  </tr>
<% end %>
</table>

<%= will_paginate %>

<br />


