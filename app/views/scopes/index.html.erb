<% provide(:title, 'Managing scopes') %>

<h1>Scopes</h1>

<table class="table table-striped">
  <tr>
    <th>Hierarchy</th>
    <th>Code</th>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
    <th>Created by</th>
    <th>Updated by</th>
  </tr>

<% @scopes.each do |scope| %>
  <tr>
    <td><%= link_to scope.hierarchy, scope %></td>
    <td><%= link_to scope.code, scope %></td>
    <td><%= scope.name %></td>
    <td><%= scope.description %></td>
    <td><%= scope.status.name %></td>
    <td><%= scope.created_by %></td>
    <td><%= scope.updated_by %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Scope', new_scope_path %>

