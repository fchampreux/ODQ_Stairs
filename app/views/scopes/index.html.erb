<% provide(:title, 'Scopes index') %>

<% if signed_in? %>

<h1>Scopes</h1>

<table class="table table-striped">
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Description</th>
    <th>Created by</th>
    <th>Created at by</th>
    <th>Playground</th>
    <th>Landscape</th>
  </tr>

<% @scopes.each do |scope| %>
  <tr>
    <td><%= link_to scope.code, scope %></td>
    <td><%= scope.name %></td>
    <td><%= scope.description %></td>
    <td><%= scope.created_by %></td>
    <td><%= scope.created_at %></td>
    <td><%= scope.playground_id %></td>
    <td><%= scope.landscape_id %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Scope', new_scope_path %>

<% else %>

You must log in to access this page. 
<%= link_to ' Click here', root_path %>

<% end %>
