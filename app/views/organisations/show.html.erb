<% provide(:title, 'Managing organisations') %>

  <h1>Organisation: <%= @organisation.name %></h1>
      
  <ul class="mid_menu">
    <li><%= link_to 'Edit', edit_organisation_path(@organisation) %> |</li>
    <li><%= link_to 'Back', @organisation.parent_org %> |</li>
    <li><%= link_to 'Destroy', @organisation, confirm: 'Are you sure?', method: :delete %></li>
  </ul>

<!-- <p id="notice"><%= notice %></p> -->

  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab1" data-toggle="tab">Definition</a></li>
      <li><a href="#tab2" data-toggle="tab">Ownership</a></li>
    </ul>
    <div class="tab-content">

    <div class="tab-pane active" id="tab1">
<!-- Tab content for Definition -->

      <div class="row">
        <div class="span2 text-right">Name:
        </div>
        <div class="span6"><%= @organisation.name%>
        </div>
        <div class="span1 text-right">Code:
        </div>
        <div class="span1"><%= @organisation.code%>
        </div>
        <div class="span1 text-right">Status:
        </div>
        <div class="span1"><%= @organisation.status.name%>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right">Description:
        </div>
        <div class="span6"><pre><%= @organisation.description%></pre>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right">Hierarchy:
        </div>
        <div class="span2"><%= @organisation.hierarchy%>
        </div>
      </div>

<!-- Tab content -->
    </div>    

    <div class="tab-pane" id="tab2">
      <%= render partial: "shared/object_ownership", locals: {this_object: @organisation} %>
    </div>
    
    </div>
  </div>

<table width=100%>    
  <tr><td><hr /></td></tr>
  <tr align="left">
    <th>Linked organisations</th>
    <th></th>
  </tr>
  <tr>
    <td>
      <table class="table table-striped table-condensed">
        <tr align="left">
          <th> Code </th>
          <th> Name </th>
          <th> Description </th>
          <th> Updated by </th>
          <th> Updated at </th>
        </tr>
        <%@organisation.child_orgs.order("code ASC").each do |child_org| %>
        <tr align="left">
          <td valign="top"> <%=link_to child_org.code, child_org%> </td>
          <td valign="top"> <%=child_org.name%> </td>
          <td class="col_wide"> <%=child_org.description%> </td>
          <td valign="top"> <%=child_org.updated_by%> </td>
          <td valign="top"> <%=child_org.updated_at%> </td>
        </tr>
        <% end%>
      </table>
    </td>
  </tr>
  <tr>
    <td>
      <%= link_to 'Add organisation', new_organisation_organisation_path(@organisation) %>
    </td>
  </tr>
</table>



