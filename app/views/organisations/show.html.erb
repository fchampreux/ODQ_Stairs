<% provide(:title, (t('Managing') + ' ' + t('Oranisations'))) %>

<% content_for :page_heading do %>
  <%= t('Organisation') %>: <%= @organisation.name %>
<% end %>
      
  <ul class="mid_menu">
    <li><%= link_to t('Edit'), edit_organisation_path(@organisation) %> |</li>
    <li><%= link_to t('Back'), @organisation.parent_org %> |</li>
    <li><%= link_to t('Destroy'), @organisation, confirm: 'Are you sure?', method: :delete %></li>
  </ul>

<!-- <p id="notice"><%= notice %></p> -->

  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab1" data-toggle="tab"><%= t('Definition') %></a></li>
      <li><a href="#tab2" data-toggle="tab"><%= t('Ownership')%></a></li>
    </ul>
    <div class="tab-content">

    <div class="tab-pane active" id="tab1">
<!-- Tab content for Definition -->
      <%= render partial: "shared/object_definition", locals: {this_object: @organisation} %>
    </div>

    <div class="tab-pane" id="tab2">
<!-- Tab content for Ownership -->
      <%= render partial: "shared/object_ownership", locals: {this_object: @organisation} %>
    </div>
    
    </div>
  </div>

<table width=100%>    
  <tr><td><hr /></td></tr>
  <tr align="left">
    <th><%= t('Organisations') %></th>
    <th></th>
  </tr>
  <tr>
    <td>
      <%= render partial: "shared/child_object_index", locals: {this_child_index: @organisation.child_orgs} %>
    </td>
  </tr>
  <tr>
    <td>
      <%= link_to t('Add') + ' ' + t('Organisation'), new_organisation_organisation_path(@organisation) %>
    </td>
  </tr>
</table>



