<% provide(:title, 'Managing business processes') %>

<%= will_paginate %>

<%= render partial: "shared/simple_search", locals: {this_path: business_processes_path} %>

<table class="table table-striped">
  <tr>
    <th>Hierarchy</th>
    <th>Code</th>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
    <th>Audit</th>
    <th>Updated by</th>
    <th>Updated at</th>
  </tr>

<% @business_processes.each do |business_process| %>
  <tr>
    <td class="col_narrow"><%= link_to business_process.hierarchy, business_process %></td>
    <td class="col_narrow"><%= link_to business_process.code, business_process %></td>
    <td><%= business_process.name %></td>
    <td class="col_medium"><%= business_process.description %></td>
    <td><%= business_process.status.name %></td>
    <td><%= image_tag(index_audit_tag_for(business_process), :alt => "Quality hit") %></td>
    <td><%= business_process.updated_by %></td>
    <td><%= business_process.updated_at %></td>
  </tr>
<% end %>
</table>

<%= will_paginate %>

<br />

