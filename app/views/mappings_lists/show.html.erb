<% provide(:title, 'Managing mappings lists') %>

  <h1><%= @mappings_list.name %></h1>

  <ul class="mid_menu">
    <li><%= link_to 'Edit', edit_mappings_list_path(@mappings_list) %> |</li>
    <li><%= link_to 'Up', mappings_lists_path %> |</li>
    <li><%= link_to 'Destroy', @mappings_list, confirm: 'Are you sure?', method: :delete %></li>
  </ul>

<!-- <p id="notice"><%= notice %></p> -->

      <div class="row">
        <div class="span2 text-right">Name:
        </div>
        <div class="span3"><%= @mappings_list.name%>
        </div>
        <div class="span1 text-right">Code:
        </div>
        <div class="span2"><%= @mappings_list.code%>
        </div>
        <div class="span2 text-right">Unique id:
        </div>
        <div class="span1"><%= @mappings_list.id%>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right">Description:
        </div>
        <div class="span6"><pre><%= @mappings_list.description%></pre>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right"> Source list:
        </div>
        <div class="span2"> <%= link_to @mappings_list.source_list.name, @mappings_list.source_list %>
        </div>
        <div class="span2 text-right"> Target list:
        </div>
        <div class="span2"> <%= link_to @mappings_list.target_list.name, @mappings_list.target_list %>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right">Owner:
        </div>
        <div class="span2"><%= @mappings_list.owner.login%>
        </div>
        <div class="span2 text-right">Created by:
        </div>
        <div class="span2"><%= @mappings_list.created_by%>
        </div>
        <div class="span2 text-right">Updated by:
        </div>
        <div class="span2"><%= @mappings_list.updated_by%>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right">Playground id:
        </div>
        <div class="span2"><%= @mappings_list.playground_id%>
        </div>
        <div class="span2 text-right">Created at:
        </div>
        <div class="span2"><%= @mappings_list.created_at%>
        </div>
        <div class="span2 text-right">Updated at:
        </div>
        <div class="span2"><%= @mappings_list.updated_at%>
        </div>
      </div>

<!-- Mappings liÃ©s -->

      <table class="table table-striped table-condensed">
        <tr align="left">
      <th>Software</th>
      <th>Table</th>
      <th>Code</th>
      <th>Value</th>
      <th>Value</th>
      <th>Code</th>
      <th>Table</th>
      <th>Software</th>
      <th>Updated by</th>
      <th>Updated at</th>
        </tr>
        <% @mappings_list.mappings.each do |mapping| %>
        <tr align="left">
        <td><%= mapping.source_software %></td>
        <td><%= mapping.source_table %></td>
        <td><%= mapping.source_code %></td>
        <td><%= mapping.source_caption %></td>
        <td><%= mapping.target_caption %></td>
        <td><%= mapping.target_code %></td>
        <td><%= mapping.target_table %></td>
        <td><%= mapping.target_software %></td>
        <td><%= mapping.updated_by %></td>
        <td><%= mapping.updated_at %></td>
        </tr>
        <% end%>
      </table>

      <%= link_to "Add mapping", new_mappings_list_mapping_path(@mappings_list) %>


