<% provide(:title, 'Managing landscapes') %>

  <ul class="breadcrumbs">
    <li>> <%= link_to @landscape.playground.name, @landscape.playground %> > </li>
    <li><%= @landscape.name %> </li>
  </ul>

  <h1>Landscape: <%= @landscape.name %></h1>
  
  <ul class="mid_menu">
    <li><%= link_to 'Edit', edit_landscape_path(@landscape) %> |</li>
    <li><%= link_to 'Up', @landscape.playground %> | </li>
    <li><%= link_to 'Destroy', @landscape, confirm: 'Are you sure?', method: :delete %></li>
  </ul>

<!-- <p id="notice"><%= notice %></p> -->

  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab1" data-toggle="tab">Definition</a></li>
      <li><a href="#tab2" data-toggle="tab">Ownership</a></li>
    </ul>
    <div class="tab-content">

    <div class="tab-pane active" id="tab1">
<!-- Tab content for Definition -->

      <div class="row">
        <div class="span2 text-right">Name:
        </div>
        <div class="span6"><%= @landscape.name%>
        </div>
        <div class="span1 text-right">Code:
        </div>
        <div class="span1"><%= @landscape.code%>
        </div>
        <div class="span1 text-right">Status:
        </div>
        <div class="span1"><%= @landscape.status.name%>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right">Description:
        </div>
        <div class="span6"><pre><%= @landscape.description%></pre>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right">Hierarchy:
        </div>
        <div class="span2"><%= @landscape.hierarchy%>
        </div>
      </div>

<!-- Tab content -->
    </div>    

    <div class="tab-pane" id="tab2">
<!-- Tab content for Ownership -->

      <div class="row">
        <div class="span2 text-right">Unique id:
        </div>
        <div class="span2"><%= @landscape.id%>
        </div>
        <div class="span2 text-right">Created by:
        </div>
        <div class="span2"><%= @landscape.created_by%>
        </div>
      </div>
      <div class="row">
        <div class="span2 text-right">Playground id:
        </div>
        <div class="span2"><%= @landscape.playground_id%>
        </div>
        <div class="span2 text-right">Created at:
        </div>
        <div class="span2"><%= @landscape.created_at%>
        </div>
      </div>
      <div class="row">
        <div class="span2 text-right">Owner:
        </div>
        <div class="span2"><%= @landscape.owner.login%>
        </div>
        <div class="span2 text-right">Updated by:
        </div>
        <div class="span2"><%= @landscape.updated_by%>
        </div>
      </div>
      <div class="row">
        <div class="span2 text-right">Parent:
        </div>
        <div class="span2"><%= link_to @landscape.playground.name, @landscape.playground %>
        </div>
        <div class="span2 text-right">updated at:
        </div>
        <div class="span2"><%= @landscape.updated_at%>
        </div>
      </div>

<!-- Tab content -->
    </div>
    
    </div>
  </div>

<table width=100%>
  <tr><td><hr /></td></tr>
  <tr align="left">
    <th>Linked Scopes</th>
  </tr>
  <tr>
    <td>
      <table class="table table-striped table-condensed">
        <tr align="left">
          <th> Code </th>
          <th> Name </th>
          <th> Description </th>
          <th> Updated by </th>
          <th> Updated at </th>
        </tr>
        <%@landscape.scopes.each do |scope| %>
        <tr align="left">
          <td valign="top"> <%=link_to scope.code, scope%> </td>
          <td valign="top"> <%=scope.name%> </td>
          <td class="col_wide"> <%=scope.description%> </td>
          <td valign="top"> <%=scope.updated_by%> </td>
          <td valign="top"> <%=scope.updated_at%> </td>
        </tr>
        <% end%>
      </table>
    </td>
  </tr>
  <tr>
    <td>
      <%= link_to 'Add scope', new_landscape_scope_path(@landscape) %>
    </td>
  </tr>
</table>
