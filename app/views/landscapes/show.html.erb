<% provide(:title, 'Show Landscape') %>

<% if signed_in? %>

  <h1>Landscape: <%= @landscape.code %></h1>
  
  <ul class="mid_menu">
    <li><%= link_to 'Edit', edit_landscape_path(@landscape) %> |</li>
    <li><%= link_to 'Back', landscapes_path %> | </li>
    <li><%= link_to 'Destroy', @landscape, confirm: 'Are you sure?', method: :delete %></li>
  </ul>

  <p id="notice"><%= notice %></p>

  <hr />
  
  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab1" data-toggle="tab">Definition</a></li>
      <li><a href="#tab2" data-toggle="tab">Ownership</a></li>    
    </ul>
    <div class="tab-content">

    <div class="tab-pane active" id="tab1">

<!-- Tab content -->
      <table>         
        <tr>
          <td align="right"><b>Description:</b>
          </td>
          <td><%= @landscape.description %>
          </td>
        </tr>
      </table>
<!-- Tab content -->

    </div>

    <div class="tab-pane" id="tab2">

<!-- Tab content -->

      <table width=100%>
        <tr>
          <td align="right"><b>Name:</b>
          </td>
          <td><%= @landscape.name %>
          </td>
          <td align="right"><b>Created by:</b>
          </td>
          <td><%= @landscape.created_by %>
          </td>
        </tr>
        <tr>
          <td align="right"><b>Code:</b>
          </td>
          <td><%= @landscape.code %>
          </td>
          <td align="right"><b>Created at:</b>
          </td>
          <td><%= @landscape.created_at %>
          </td>
        </tr>
        <tr>
          <td align="right"><b>Id:</b>
          </td>
          <td><%= @landscape.id %>
          </td>
          <td align="right"><b>Updated by:</b>
          </td>
          <td><%= @landscape.updated_by %>
          </td>
        </tr>
        <tr>
          <td align="right"><b>Belongs to playground:</b>
          </td>
          <td><%= @landscape.playground_id %>
          </td>
          <td align="right"><b>Updated at:</b
          </td>
          <td><%= @landscape.updated_at %>
          </td>
        </tr>
      </table>

  <!-- Tab content -->
    </div>
  </div>
</div>

<table width=100%>
  <tr><td><hr /></td></tr>
  <tr align="left">
    <th>Linked Scopes</th>
  </tr>
  <tr>
    <td>
      <table class="table table-striped table-condensed">
        <%@landscape.scopes.each do |scope| %>
        <tr align="left">
          <td valign="top"> <%=link_to scope.code, scope%> </td>
          <td valign="top"> <%=scope.name%> </td>
          <td valign="top"> <%=scope.description%> </td>
          <td> </td>
        </tr>
        <% end%>
      </table>
    </td>
  </tr>
  <tr>
    <td>
      <%= link_to 'Add scope', new_landscape_scope_path(@landscape) %>
    </td>
  </tr>
</table>

<% else %>

You must log in to access this page. 
<%= link_to ' Click here', root_path %>

<% end %>





