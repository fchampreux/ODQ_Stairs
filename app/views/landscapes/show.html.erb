<% provide(:title, (t('Managing') + ' ' + t('Landscapes')))  %>
<% content_for :page_heading do %>
  <%= image_tag(index_audit_tag_for(@landscape), :alt => "Quality hit") %> <%= t('Landscape') %>: <%= @landscape.name %>
<% end %>
<% content_for :breadcrums do %>
  <ul class="breadcrumbs">
    <li>> <%= link_to @landscape.playground.name, @landscape.playground %> > </li>
    <li><%= @landscape.name %> </li>
  </ul>
<% end %>
  
  <ul class="mid_menu">
    <li><%= link_to 'Edit', edit_landscape_path(@landscape) %> |</li>
    <li><%= link_to 'Up', @landscape.playground %> | </li>
    <li><%= link_to 'Destroy', @landscape, confirm: 'Are you sure?', method: :delete %></li>
  </ul>

<!-- <p id="notice"><%= notice %></p> -->

  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#definition" data-toggle="tab"> <%= t('Definition') %> </a></li>
      <li><a href="#ownership" data-toggle="tab"> <%= t('Ownership') %> </a></li>
    </ul>
    <div class="tab-content">

    <div class="tab-pane active" id="definition">
        <%= render partial: "shared/object_definition", locals: {this_object: @landscape} %>
    </div>    

    <div class="tab-pane" id="ownership">
      <%= render partial: "shared/object_ownership", locals: {this_object: @landscape} %>
    </div>
    
    </div>
  </div>

<table width=100%>
  <tr><td><hr /></td></tr>
  <tr align="left">
    <th> <%= t('Scopes') %> </th>
  </tr>
  <tr>
    <td>
      <%= render partial: "shared/child_object_index", locals: {this_child_index: @landscape.scopes} %>
    </td>
  </tr>
  <tr>
    <td>
      <%= link_to 'Add scope', new_landscape_scope_path(@landscape) %>
    </td>
  </tr>
</table>
