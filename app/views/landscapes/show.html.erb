<% provide(:title, 'Managing landscapes') %>

  <ul class="breadcrumbs">
    <li>> <%= link_to @landscape.playground.name, @landscape.playground %> > </li>
    <li><%= @landscape.name %> </li>
  </ul>

  <h1><%= image_tag(index_audit_tag_for(@landscape), :alt => "Quality hit") %> Landscape: <%= @landscape.name %></h1>
  
  <ul class="mid_menu">
    <li><%= link_to 'Edit', edit_landscape_path(@landscape) %> |</li>
    <li><%= link_to 'Up', @landscape.playground %> | </li>
    <li><%= link_to 'Destroy', @landscape, confirm: 'Are you sure?', method: :delete %></li>
  </ul>

<!-- <p id="notice"><%= notice %></p> -->

  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab1" data-toggle="tab">Definition</a></li>
      <li><a href="#tab2" data-toggle="tab">Ownership</a></li>
    </ul>
    <div class="tab-content">

    <div class="tab-pane active" id="tab1">
<!-- Tab content for Definition -->

      <div class="row">
        <div class="col-md-2 text-right">Name:
        </div>
        <div class="col-md-6"><%= @landscape.name%>
        </div>
        <div class="col-md-1 text-right">Code:
        </div>
        <div class="col-md-1"><%= @landscape.code%>
        </div>
        <div class="col-md-1 text-right">Status:
        </div>
        <div class="col-md-1"><%= @landscape.status.name%>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 text-right">Description:
        </div>
        <div class="col-md-6"><pre><%= @landscape.description%></pre>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 text-right">Hierarchy:
        </div>
        <div class="col-md-2"><%= @landscape.hierarchy%>
        </div>
      </div>

<!-- Tab content -->
    </div>    

    <div class="tab-pane" id="tab2">
      <%= render partial: "shared/object_ownership", locals: {this_object: @landscape} %>
    </div>
    
    </div>
  </div>

<table width=100%>
  <tr><td><hr /></td></tr>
  <tr align="left">
    <th>Linked Scopes</th>
  </tr>
  <tr>
    <td>
      <table class="table table-striped table-condensed">
        <tr align="left">
          <th> </th>
          <th> Code </th>
          <th> Name </th>
          <th> Description </th>
          <th> Updated by </th>
          <th> Updated at </th>
        </tr>
        <%@landscape.scopes.order("code ASC").each do |scope| %>
        <tr align="left">
          <td><%= image_tag(index_audit_tag_for(scope), :alt => "Quality hit") %></td>
          <td valign="top"> <%=link_to scope.code, scope%> </td>
          <td valign="top"> <%=scope.name%> </td>
          <td class="col_wide"> <%=scope.description%> </td>
          <td valign="top"> <%=scope.updated_by%> </td>
          <td valign="top"> <%=scope.updated_at%> </td>
        </tr>
        <% end%>
      </table>
    </td>
  </tr>
  <tr>
    <td>
      <%= link_to 'Add scope', new_landscape_scope_path(@landscape) %>
    </td>
  </tr>
</table>
