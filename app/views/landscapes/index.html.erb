<% provide(:title, 'Managing landscapes') %>

<h1>Landscapes</h1>

<%= will_paginate %>

<table class="table table-striped">
  <tr>
    <th>Hierarchy</th>
    <th>Code</th>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
    <th>Audit</th>
    <th>Updated by</th>
    <th>Updated at</th>
  </tr>

<% @landscapes.each do |landscape| %>
  <tr>
    <td class="col_narrow"><%= link_to landscape.hierarchy, landscape %></td>
    <td class="col_narrow"><%= link_to landscape.code, landscape %></td>
    <td><%= landscape.name %></td>
    <td class="col_medium"><%= landscape.description %></td>
    <td><%= landscape.status.name %></td>
    <td><%= image_tag(index_audit_tag_for(landscape), :alt => "Quality hit") %></td>
    <td><%= landscape.updated_by %></td>
    <td><%= landscape.updated_at %></td>
  </tr>
<% end %>
</table>

<%= will_paginate %>

<br />



