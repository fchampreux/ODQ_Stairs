<% provide(:title, (t('Managing') + ' ' + t('Mappings'))) %>

<% content_for :page_heading do %>
    <%= t('ListOf') + ' ' + t('Mappings') %>
<% end %> 

<table  class="table table-striped">
  <thead>
    <tr>

      <div class="row">
        <div class="col-md-6 text-center"> <h2> <%= t('Source') %> </h2> 
        </div>
        <div class="col-md-6 text-center"> <h2> <%= t('Target') %> </h2> 
        </div>
      </div>

    </tr>
    <tr>
      <th> <%= t('Software') %> </th>
      <th> <%= t('Table') %> </th>
      <th> <%= t('Code') %> </th>
      <th> <%= t('Value') %> </th>
      <th> <%= t('Value') %> </th>
      <th> <%= t('Code') %> </th>
      <th> <%= t('Table') %> </th>
      <th> <%= t('Software') %> </th>
      <th> <%= t('Created B') %> </th>
      <th> <%= t('UpdatedBy') %> </th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @mappings.each do |mapping| %>
      <tr>
        <td><%= mapping.source_software %></td>
        <td><%= mapping.source_table %></td>
        <td><%= mapping.source_code %></td>
        <td><%= mapping.source_caption %></td>
        <td><%= mapping.target_caption %></td>
        <td><%= mapping.target_code %></td>
        <td><%= mapping.target_table %></td>
        <td><%= mapping.target_software %></td>
        <td><%= mapping.created_by %></td>
        <td><%= mapping.updated_by %></td>
        <td><%= link_to 'Show', mapping %></td>
        <td><%= link_to 'Edit', edit_mapping_path(mapping) %></td>
        <td><%= link_to 'Destroy', mapping, method: :delete, data: { confirm: 'Mapping will be deleted. Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


