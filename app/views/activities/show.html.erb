<% provide(:title, (t('ManagingPms'))) %>

<% content_for :page_heading do %>
    <%= t('Settings') %>: <%= @activity.name %>
<% end %> 

  <ul class="mid_menu">
    <li><%= link_to t('Edit'), edit_parameters_list_path(@activity) %> |</li>
    <li><%= link_to t('Up'), parameters_lists_path %> |</li>
    <li><%= link_to t('Destroy'), @activity, confirm: t('Sure'), method: :delete %></li>
  </ul>

<!-- <p id="notice"><%= notice %></p> -->


      <div class="row">
        <div class="col-md-2 text-right"><%= t('Name') %>:
        </div>
        <div class="col-md-3"><%= @activity.name%>
        </div>
        <div class="col-md-1 text-right"><%= t('Code') %>:
        </div>
        <div class="col-md-2"><%= @activity.code%>
        </div>
        <div class="col-md-2 text-right"><%= t('UniqueId') %>:
        </div>
        <div class="col-md-1"><%= @activity.id%>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 text-right"><%= t('Description') %>:
        </div>
        <div class="col-md-6"><pre><%= @activity.description%></pre>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 text-right"><%= t('Owner') %>:
        </div>
        <div class="col-md-2"><%= @activity.owner.login%>
        </div>
        <div class="col-md-2 text-right"><%= t('CreatedBy') %>:
        </div>
        <div class="col-md-2"><%= @activity.created_by%>
        </div>
        <div class="col-md-2 text-right"><%= t('UpdatedBy') %>:
        </div>
        <div class="col-md-2"><%= @activity.updated_by%>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 text-right"><%= t('PgndId') %>:
        </div>
        <div class="col-md-2"><%= @activity.playground_id%>
        </div>
        <div class="col-md-2 text-right"><%= t('CreatedAt') %>:
        </div>
        <div class="col-md-2"><%= @activity.created_at%>
        </div>
        <div class="col-md-2 text-right"><%= t('UpdatedAt') %>:
        </div>
        <div class="col-md-2"><%= @activity.updated_at%>
        </div>
      </div>

<!-- Paramètres liés -->

  <div class="row">
    <div class="col-md-2">
      Download:
      <%= link_to "CSV", activity_path(@activity, format: "csv") %> |
      <%= link_to "Excel", activity_path(@activity, format: "xls") %>
    </div>
  </div>
  
      <table class="table table-striped table-condensed">
        <tr align="left">
          <th> <%= t('Name') %> </th>
          <th> <%= t('Code') %> </th>
          <th> <%= t('Value') %> </th>
          <th> <%= t('Description') %> </th>
        </tr>
        <% @activity.tasks.order("name ASC").each do |task| %>
        <tr align="left">
          <td valign="top"> <%= task.name %> </td>
          <td class="col_narrow"> <%=task.code%> </td>
          <td class="col_medium"> <%=task.description %> </td>
        </tr>
        <% end%>
      </table>



