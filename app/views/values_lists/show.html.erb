<% provide(:title, 'Managing lists of values') %>

  <h1><%= @values_list.name %></h1>

  <ul class="mid_menu">
    <li><%= link_to 'Edit', edit_values_list_path(@values_list) %> |</li>
    <li><%= link_to 'Up', values_lists_path %> |</li>
    <li><%= link_to 'Destroy', @values_list, confirm: 'Are you sure?', method: :delete %></li>
  </ul>

<!-- <p id="notice"><%= notice %></p> -->


      <div class="row">
        <div class="span2 text-right">Name:
        </div>
        <div class="span3"><%= @values_list.name%>
        </div>
        <div class="span1 text-right">Code:
        </div>
        <div class="span2"><%= @values_list.code%>
        </div>
        <div class="span2 text-right">Unique id:
        </div>
        <div class="span1"><%= @values_list.id%>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right">Description:
        </div>
        <div class="span6"><pre><%= @values_list.description%></pre>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right">Owner:
        </div>
        <div class="span2"><%= @values_list.owner.login%>
        </div>
        <div class="span2 text-right">Created by:
        </div>
        <div class="span2"><%= @values_list.created_by%>
        </div>
        <div class="span2 text-right">Updated by:
        </div>
        <div class="span2"><%= @values_list.updated_by%>
        </div>
      </div>

      <div class="row">
        <div class="span2 text-right">Playground id:
        </div>
        <div class="span2"><%= @values_list.playground_id%>
        </div>
        <div class="span2 text-right">Created at:
        </div>
        <div class="span2"><%= @values_list.created_at%>
        </div>
        <div class="span2 text-right">Updated at:
        </div>
        <div class="span2"><%= @values_list.updated_at%>
        </div>
      </div>

<!-- Paramètres liés -->

      <table class="table table-striped table-condensed">
        <tr align="left">
          <th> Name </th>
          <th> Code </th>
          <th> Value </th>
          <th> Description </th>
          <th> Updated by </th>
          <th> Updated at </th>
        </tr>
        <% @values_list.values.each do |value| %>
        <tr align="left">
          <td valign="top"> <%=link_to value.name, value %> </td>
          <td class="col_narrow"> <%=value.value_code%> </td>
          <td class="col_narrow"> <%=value.value_caption%> </td>
          <td class="col_medium"> <%=value.description%> </td>
          <td valign="top"> <%=value.updated_by%> </td>
          <td valign="top"> <%=value.updated_at%> </td>
        </tr>
        <% end%>
      </table>

      <%= link_to "Add value", new_values_list_value_path(@values_list) %>


