<% provide(:title, 'Managing users') %>
<% content_for :page_heading do %>
    Users list
<% end %>

<table class="table table-striped">
  <tr>

    <th>Login</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Directory</th>
    <th>Description</th>
    <th>Active from</th>
    <th>Active to</th>
    <th>Is admin</th>
    <th>Updated by</th>
    <th>Updated at</th>
  </tr>

<% @users.each do |user| %>
  <tr>

    <td><%= link_to user.user_name, user %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.external_directory_id %></td>
    <td><%= user.description %></td>
    <td><%= user.active_from %></td>
    <td><%= user.active_to %></td>
    <td><%= user.is_admin %></td>
    <td><%= user.updated_by %></td>
    <td><%= user.updated_at %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
