<% provide(:title, 'Managing territories') %>

<h1>Territories</h1>

<%= will_paginate %>

          <h4>Search for Territories</h4>
          <%= form_tag territories_path, :method => 'get' do %>
            <p>
              <%= text_field_tag :criteria, params[:criteria] %>
              <%= submit_tag "Search", :name => nil %>
            </p>
          <% end %>

<table class="table table-striped">
  <tr>
    <th>Hierarchy</th>
    <th>Code</th>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
    <th>Updated by</th>
    <th>Updated at</th>
  </tr>

<% @territories.each do |territory| %>
  <tr>
    <td class="col_narrow"><%= link_to territory.hierarchy, territory %></td>
    <td class="col_narrow"><%= link_to territory.code, territory %></td>
    <td><%= territory.name %></td>
    <td class="col_medium"><%= territory.description %></td>
    <td><%= territory.status.name %></td>
    <td><%= territory.updated_by %></td>
    <td><%= territory.updated_at %></td>
  </tr>
<% end %>
</table>

<%= will_paginate %>

<br />


