<% provide(:title, 'Managing business areas') %>

  <ul class="breadcrumbs">
    <li>> <%= @business_area.name %> </li>
  </ul>

  <h1><%= image_tag(index_audit_tag_for(@business_area), :alt => "Quality hit") %> Business area: <%= @business_area.name %></h1>

  <ul class="mid_menu">
    <li><%= link_to 'Edit', edit_business_area_path(@business_area) %> |</li>
    <li><%= link_to 'Back', business_areas_path %> |</li>
    <li><%= link_to 'Destroy', @business_area, confirm: 'Are you sure?', method: :delete %></li>
  </ul>

<!-- Setup the tabs -->

  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li><a href="#definition" data-toggle="tab">Definition</a></li>
      <li class="active"><a href="#measures" data-toggle="tab">Measures</a></li>
      <li><a href="#ownership" data-toggle="tab">Ownership</a></li>
    </ul>
    <div class="tab-content">

      <div class="tab-pane" id="definition"> 
        <%= render partial: "shared/object_definition", locals: {this_object: @business_area} %>
      </div>
    
      <div class="tab-pane active" id="measures">
        <%= render partial: "shared/render_charts", locals: {this_object: @business_area} %>
      </div>    

      <div class="tab-pane" id="ownership">
        <%= render partial: "shared/object_ownership", locals: {this_object: @business_area} %>
      </div>
    
    </div>
  </div>
    
    </div>
  </div>

<hr />

  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab10" data-toggle="tab">Linked Business Flows</a></li>
      <li><a href="#tab11" data-toggle="tab">Linked Business Objects</a></li>
    </ul>
    <div class="tab-content">

    <div class="tab-pane active" id="tab10">
<!-- Tab content for Linked Business Flows -->

      <table class="table table-striped table-condensed">
        <tr align="left">
          <th> </th>
          <th> Code </th>
          <th> Name </th>
          <th> Description </th>
          <th> Updated by </th>
          <th> Updated at </th>
        </tr>
        <%@business_area.business_flows.order("code ASC").each do |business_flow| %>
        <tr align="left">
          <td><%= image_tag(index_audit_tag_for(business_flow), :alt => "Quality hit") %></td>
          <td valign="top"> <%=link_to business_flow.code, business_flow%> </td>
          <td valign="top"> <%=business_flow.name%> </td>
          <td class="col_wide"> <%=business_flow.description%> </td>
          <td valign="top"> <%=business_flow.updated_by%> </td>
          <td valign="top"> <%=business_flow.updated_at%> </td>
        </tr>
        <% end%>
      </table>

      <%= link_to 'Add business flow', new_business_area_business_flow_path(@business_area) %>

<!-- Tab content -->
    </div>

    <div class="tab-pane" id="tab11">
<!-- Tab content for Linked Business Objects -->

      <table class="table table-striped table-condensed">
        <tr align="left">
          <th> </th>
          <th> Code </th>
          <th> Name </th>
          <th> Description </th>
          <th> Updated by </th>
          <th> Updated at </th>
        </tr>
        <%@business_area.business_objects.order("code ASC").each do |business_object| %>
        <tr align="left">
          <td><%= image_tag(index_audit_tag_for(business_object), :alt => "Quality hit") %></td>
          <td valign="top"> <%=link_to business_object.code, business_object%> </td>
          <td valign="top"> <%=business_object.name%> </td>
          <td class="col_wide"> <%=business_object.description%> </td>
          <td valign="top"> <%=business_object.updated_by%> </td>
          <td valign="top"> <%=business_object.updated_at%> </td>
        </tr>
        <% end%>
      </table>

      <%= link_to 'Add business object', new_business_area_business_object_path(@business_area) %>

<!-- Tab content -->
    </div>

  </div>
</div>

