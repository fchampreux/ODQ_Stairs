<% provide(:title, 'Business Areas index') %>

<% if signed_in? %>

<h1>Business areas</h1>

<table class="table table-striped">
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Description</th>
    <th>Created by</th>
    <th>Created at</th>
    <th>Playground</th>
  </tr>

<% @business_areas.each do |business_area| %>
  <tr>
    <td><%= link_to business_area.code, business_area %></td>
    <td><%= business_area.name %></td>
    <td><%= business_area.description %></td>
    <td><%= business_area.created_by %></td>
    <td><%= business_area.created_at %></td>
    <td><%= business_area.playground_id %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Business area', new_business_area_path %>

<% else %>

You must log in to access this page. 
<%= link_to ' Click here', root_path %>

<% end %>

