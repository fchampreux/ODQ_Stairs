<% provide(:title, 'Managing business objects') %>
<% content_for :page_heading do %>
  <%= image_tag(index_audit_tag_for(@business_object), :alt => "Quality hit") %> Business object: <%= @business_object.name %>
<% end %>
<% content_for :breadcrums do %>
  <ul class="breadcrumbs">
    <li>> <%= link_to @business_object.business_area.name, @business_object.business_area %> > </li>
    <li><%= @business_object.name %> </li>
  </ul>
<% end %>

  <ul class="mid_menu">
    <li><%= link_to 'Edit', edit_business_object_path(@business_object) %> |</li>
    <li><%= link_to 'Up', @business_object.business_area %> |</li>
    <li><%= link_to 'Destroy', @business_object, confirm: 'Are you sure?', method: :delete %></li>
  </ul>

<!-- <p id="notice"><%= notice %></p> -->

  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab1" data-toggle="tab">Definition</a></li>
      <li><a href="#tab2" data-toggle="tab">Implementation</a></li>
      <li><a href="#tab3" data-toggle="tab">Ownership</a></li>
    </ul>
    <div class="tab-content">

    <div class="tab-pane active" id="tab1">
<!-- Tab content for Definition -->

      <div class="row">
        <div class="col-md-2 text-right">Name:
        </div>
        <div class="col-md-6"><%= @business_object.name%>
        </div>
        <div class="col-md-1 text-right">Code:
        </div>
        <div class="col-md-1"><%= @business_object.code%>
        </div>
        <div class="col-md-1 text-right">Status:
        </div>
        <div class="col-md-1"><%= @business_object.status.name%>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 text-right">Description:
        </div>
        <div class="col-md-6"><pre><%= @business_object.description%></pre>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 text-right">Hierarchy:
        </div>
        <div class="col-md-2"><%= @business_object.hierarchy%>
        </div>
      </div>


<!-- Tab content -->
    </div>    


    <div class="tab-pane" id="tab2">
<!-- Tab content for Implementation -->

      <div class="row">
        <div class="col-md-2 text-right">Technology:
        </div>
        <div class="col-md-2"><%= @business_object.db_technology%>
        </div>
        <div class="col-md-2 text-right">Connection:
        </div>
        <div class="col-md-2"><%= @business_object.db_connection%>
        </div>
        <div class="col-md-2 text-right">Owner schema:
        </div>
        <div class="col-md-2"><%= @business_object.db_owner_schema%>
        </div>
      </div>
       <div class="row">
        <div class="col-md-2 text-right">Structure name:
        </div>
        <div class="col-md-2"><%= @business_object.structure_name%>
        </div>
        <div class="col-md-2 text-right">Key columns:
        </div>
        <div class="col-md-2"><pre><%= @business_object.key_columns%></pre>
        </div>
        <div class="col-md-2 text-right">Published columns:
        </div>
        <div class="col-md-2"><pre><%= @business_object.published_columns%></pre>
        </div>
      </div>
<!-- Tab content -->
    </div>

    <div class="tab-pane" id="tab3">
      <%= render partial: "shared/object_ownership", locals: {this_object: @business_object} %>
    </div>

    
    </div>
  </div>





