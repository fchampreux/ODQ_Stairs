<% provide(:title, 'Maturity model') %>

<% content_for :page_heading do %>
  <%= image_tag("ODQ_Stairs", alt: "Maturity model") %>
<% end %>

<h2>Please log in</h2>

<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-md-5 col-md-offset-2">
        <div class="field">
          <%= f.label :login %><br />
          <%= f.text_field :login, autofocus: true %>
        </div>
      </div>
      <div class="col-md-5">
        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>
    </div>       
    <div class="row">
      <div class="col-md-5 col-md-offset-2">   
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
      </div>
      <div class="col-md-5">
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-5 col-md-offset-2"> 
  <%= render "devise/shared/links" %>
    </div>
  </div>
</div>