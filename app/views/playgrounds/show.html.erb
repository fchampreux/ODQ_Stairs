<% provide(:title, 'Show Playground') %>

<% if signed_in? %>

  <h1>Playground: <%= @playground.code %></h1>
    
  <ul class="mid_menu">
    <li><%= link_to 'Edit', edit_playground_path(@playground) %> |</li>
    <li><%= link_to 'Back', playgrounds_path %> | </li>
    <li><%= link_to 'Destroy', @playground, confirm: 'Are you sure?', method: :delete %></li>
  </ul>

  <p id="notice"><%= notice %></p>

  <hr />

  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab1" data-toggle="tab">Definition</a></li>
      <li><a href="#tab2" data-toggle="tab">Ownership</a></li>    
    </ul>
    <div class="tab-content">

    <div class="tab-pane active" id="tab1">

<!-- Tab content -->
      <table>         
        <tr>
          <td align="right"><b>Description:</b>
          </td>
          <td><%= @playground.description %>
          </td>
        </tr>
      </table>
<!-- Tab content -->

    </div>

    <div class="tab-pane" id="tab2">

<!-- Tab content -->
      <table width=100%>
        <tr>
          <td align="right" width="100px"><b>Name:</b>
          </td>
          <td><%= @playground.name %>
          </td>
          <td align="right"><b>Created by:</b>
          </td>
          <td><%= @playground.created_by %>
          </td>
        </tr>
        <tr>
          <td align="right"><b>Code:</b>
          </td>
          <td><%= @playground.code %>
          </td>
          <td align="right"><b>Created at:</b>
          </td>
          <td><%= @playground.created_at %>
          </td>
        </tr>
        <tr>
          <td align="right"><b>Id:</b>
          </td>
          <td><%= @playground.id %>
          </td>
          <td align="right"><b>Updated by:</b>
          </td>
          <td><%= @playground.updated_by %>
          </td>
        </tr>
        <tr>
          <td align="right"><b>Owned by:</b>
          </td>
          <td>
          </td>
          <td align="right"><b>Updated at:</b>
          </td>
          <td><%= @playground.updated_at %>
          </td>
        </tr>
      </table>
<!-- Tab content -->

    </div>
  </div>
</div>

<table width=100%>
  <tr><td><hr /></td></tr>
  <tr align="left">
    <th>Linked Landscapes</th>
    <th></th>
  </tr>
  <tr>
    <td>
      <table class="table table-striped table-condensed" >
        <%@playground.landscapes.each do |landscape| %>
        <tr align="left">
          <td valign="top"> <%=link_to landscape.code, landscape%> </td>
          <td valign="top"> <%=landscape.name%> </td>
          <td valign="top"> <%=landscape.description%> </td>
          <td> </td>
        </tr>
        <% end%>
      </table>
    </td>
  </tr>
  <tr>
    <td>
      <%= link_to 'Add landscape', new_playground_landscape_path(@playground) %>
    </td>
  </tr>
</table>

<% else %>

You must log in to access this page. 
<%= link_to ' Click here', root_path %>

<% end %>



