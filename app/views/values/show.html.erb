<% provide(:title, (t('Managing') + ' ' + t('Values'))) %>

<% content_for :page_heading do %>
    <%= t('Configuration') + ' ' + t('Value') %>: <%= @values.name%>
<% end %> 

  <ul class="mid_menu">
    <li><%= link_to t('Edit'), edit_value_path(@value) %> |</li>
    <li><%= link_to t('Up'), @value.values_list %> |</li>
    <li><%= link_to t('Destroy'), @value, confirm: 'Value will be deleted. Are you sure?', method: :delete %></li>
  </ul>

      <div class="row">
        <div class="col-md-2 text-right"><%= t('Name') %>:
        </div>
        <div class="col-md-2"><b><%= @value.name%></b>
        </div>
        <div class="col-md-2 text-right"><%= t('Code') %>:
        </div>
        <div class="col-md-1"><%= @value.value_code%>
        </div>
        <div class="col-md-1 text-right"><%= t('Value') %>:
        </div>
        <div class="col-md-1"><%= @value.value_caption%>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 text-right"><%= t('Description') %>:
        </div>
        <div class="col-md-6"><pre><%= @value.description%></pre>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 text-right"><%= t('Playground') %>:
        </div>
        <div class="col-md-1"><%= @value.playground_id%>
        </div>
        <div class="col-md-1 text-right"><%= t('Id') %>:
        </div>
        <div class="col-md-1"><%= @value.id%>
        </div>
        <div class="col-md-1 text-right"><%= t('Parent') %>:
        </div>
        <div class="col-md-2"><%= link_to @value.values_list.name, @value.values_list %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 text-right"><%= t('CreatedBy') %>:
        </div>
        <div class="col-md-2"><%= @value.created_by %>
        </div>
        <div class="col-md-2 text-right"><%= t('UpdatedBy') %>:
        </div>
        <div class="col-md-2"><%= @value.updated_by%>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 text-right"><%= t('CreatedAt') %>:
        </div>
        <div class="col-md-2"><%= @value.created_at %>
        </div>
        <div class="col-md-2 text-right"><%= t('UpdatedAt') %>:
        </div>
        <div class="col-md-2"><%= @value.updated_at%>
        </div>
      </div>


